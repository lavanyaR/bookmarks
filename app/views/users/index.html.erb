<h1>Listing News And Updates</h1>

<table >
  

<% @users.each do |users| %>
  <tr>
    <td><h4>Name</h4></td>
    <td><%= users.name %></td></tr>
<tr>
<td><h4>Title</h4></td>
    <td><%= link_to users.title , users.title , :target => :_blank %></td></tr>
<tr><td><h4>Description</h4></td>
    <td><%= users.description %></td></tr>
<tr>
    <td><%= link_to 'Show', users %></td>
    <td><%= link_to 'Edit', edit_user_path(users) %></td>
    <td><%= link_to 'Destroy', users, :confirm => 'Are you sure?', :method => :delete %></td></tr>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Update', new_user_path %>
